{
  "name": "guild-attendance-bot",
  "version": "1.0.0",
  "description": "Boss attendance + points bot for ELYSIUM guild",
  "main": "index2.js",
  "scripts": {
    "start": "node --expose-gc --max-old-space-size=450 --optimize-for-size --gc-interval=100 --max-semi-space-size=8 index2.js",
    "deploy": "clasp push",
    "deploy:new": "clasp deploy --description \"Deployment $(date +'%Y-%m-%d %H:%M:%S')\"",
    "test": "jest --verbose",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "discord.js": "^14.11.0",
    "fast-levenshtein": "^2.0.6",
    "node-cron": "^4.2.1",
    "node-fetch": "^2.6.7"
  },
  "devDependencies": {
    "jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!Code.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ]
  }
}
